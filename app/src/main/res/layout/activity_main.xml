<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="263dp"
        android:layout_height="46dp"
        android:layout_below="@+id/textView"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="2dp"
        android:layout_toStartOf="@+id/editBlockSize"
        android:background="@color/white"
        android:gravity="center"
        android:text="Number of States"
        android:textSize="20sp" />

    <TableLayout
        android:id="@+id/mainTable"
        android:layout_width="409dp"
        android:layout_height="410dp"
        android:background="#FFFFFF"
        android:clipToPadding="false"
        android:divider="@drawable/ic_launcher_background"
        android:padding="5dp"
        android:paddingStart="5dp"
        android:paddingLeft="5dp"
        android:paddingTop="5dp"
        android:paddingEnd="5dp"
        android:paddingRight="5dp"
        android:paddingBottom="5dp"
        app:barrierMargin="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mainTable"
        android:layout_marginTop="0dp"
        android:onClick="openSettings"
        android:text="Rules"
        android:visibility="visible" />

    <Button
        android:id="@+id/ramdomize"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView4"
        android:layout_marginTop="0dp"
        android:onClick="setRandom"
        android:text="ramdomize" />

    <EditText
        android:id="@+id/editBlockSize"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mainTable"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="0dp"
        android:ems="10"
        android:gravity="center"
        android:inputType="number"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/editNumberOfStates"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editBlockSize"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:ems="10"
        android:gravity="center"
        android:inputType="number"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="263dp"
        android:layout_height="46dp"
        android:layout_alignBottom="@+id/editBlockSize"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="0dp"
        android:layout_toStartOf="@+id/editBlockSize"
        android:background="@color/white"
        android:gravity="center"
        android:text="Block size"
        android:textSize="20sp" />

    <Button
        android:id="@+id/clear"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ramdomize"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:onClick="clearMainTable"
        android:text="Clear" />

</RelativeLayout>