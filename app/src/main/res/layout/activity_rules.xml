<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/newRule"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:onClick="newRule"
        android:text="New Rule"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ruleBook" />

    <LinearLayout
        android:id="@+id/ruleBook"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow
            android:id="@+id/trRule"
            android:layout_width="match_parent"
            android:layout_height="500dp">

            <Button
                android:id="@+id/prevState"
                android:layout_width="50dp"
                android:layout_height="50dp" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="----------------->" />

            <Button
                android:id="@+id/postState"
                android:layout_width="50dp"
                android:layout_height="50dp" />
        </TableRow>
    </LinearLayout>

    <Button
        android:id="@+id/saveRules"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="saveRules"
        android:text="Save Rules"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>