<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:gravity="center"
        android:textSize="24sp"
        android:title="Game Settings">

        <EditTextPreference
            android:defaultValue="true"
            android:key="edit_neighbordistance"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="Neighborhood distance" />
        <EditTextPreference
            android:defaultValue="true"
            android:key="edit_blocksize"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="Block Size" />
        <EditTextPreference
            android:defaultValue="true"
            android:key="edit_numberofstates"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="Number of States" />
        <EditTextPreference
            android:defaultValue="true"
            android:key="edit_numberofrules"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="Maximum Number of Rules" />
        <EditTextPreference
            android:defaultValue="true"
            android:key="edit_delaytime"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="Delay" />
    </PreferenceCategory>
</PreferenceScreen>